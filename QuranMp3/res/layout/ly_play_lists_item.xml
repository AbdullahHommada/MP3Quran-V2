<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_selector2"
    android:orientation="horizontal" >

	<!--  ListRow Left sied Thumbnail image -->
	
    
	<!-- Title Of Song-->
	<!-- Artist Name -->

    <TextView
        android:id="@+id/txt_playLists_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="40dp"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:typeface="sans" />

    <ImageView
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_playlist" />

    <TextView
        android:id="@+id/txt_play_lists_verses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/quick_menu"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="( سور 5 )"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:typeface="sans" />

    <RelativeLayout
        android:id="@+id/quick_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@drawable/rl_selector_btn"
        android:orientation="horizontal"
        android:paddingBottom="15dp"
        android:paddingLeft="7dp"
        android:paddingRight="7dp"
        android:paddingTop="15dp" >

	<ImageView
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	   
	    android:layout_centerVertical="true"
	    android:src="@drawable/ic_action_overflow" />

	</RelativeLayout>
    
        

</RelativeLayout>